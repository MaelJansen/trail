{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block body %}
    <h1>Race</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.Name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ race.Address }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ race.Distance }}</td>
            </tr>
            <tr>
                <th>PositiveDifference</th>
                <td>{{ race.PositiveDifference }}</td>
            </tr>
            <tr>
                <th>NegativeDifference</th>
                <td>{{ race.NegativeDifference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_race_index') }}">back to list</a>

    <a href="{{ path('app_race_edit', {'id': race.id}) }}">edit</a>

    {{ include('race/_delete_form.html.twig') }}
